color1 = #CCC
color2 = #333
color3 = #666

*
    font-family: 'Roboto', sans-serif
    line-height: 1.2
    user-select: none

html,
body
    height: 100%
    margin: 0

a
    color: inherit;
    text-decoration: none;

h1
    font-size: 2rem
    font-weight: 200

.view
    height: 100%

.panel
    background-color: color1
    box-sizing: border-box
    height: 100%
    padding: 12vh 0 0vh
    position: relative
    width: 100%

header
    background-color: color2
    color: white
    height: 12vh
    position: absolute
    top: 0
    width: 100%

    h1
        line-height: 12vh
        font-size: 6vh
        margin: 0 6vw
        vertical-align: middle

.card
    background: white
    border-radius: 3px
    box-sizing: border-box
    box-shadow: 0 1px 2px #aaa
    height: 32vh
    margin: 2vh 3vw
    position: relative
    padding: 5vh 8vw
    width: 94vw
    z-index: 2

    h1
        display: block
        margin: 0

    h2
        color: gray
        display: block
        font-size: .9rem
        font-weight: 400
        line-height: 2.5
        margin: 2vh 0 0

        &.balance
            font-size: 1.2rem

.swiper-container
    -webkit-animation: fly-in-from-left .5s 1s ease both
    animation: fly-in-from-left .5s 1s ease both
    -webkit-transform-origin: top left
    transform-origin: top left

    &(even)
        -webkit-animation-name: fly-in-from-right
        animation-name: fly-in-from-right
        -webkit-animation-delay: 1.1s
        animation-delay: 1.1s
        -webkit-transform-origin: top right
        transform-origin: top right

@keyframes fly-in-from-left
    from
        transform: translateY(15rem) rotate(15deg)
        opacity: 0

@keyframes fly-in-from-right
    from
        transform: translateY(15rem) rotate(-15deg)
        opacity: 0

.nav
    background-color: color3
    bottom: 0
    box-sizing: border-box
    height: 12vh !important
    left: 0
    position: absolute
    width: 100vw
    z-index: 10

    .btn
        box-sizing: border-box
        display: inline-block
        height: 12vh
        line-height: 12vh
        padding: 0 1vw
        text-align: center
        vertical-align: middle
        width: 32vw

        &+.btn
            border-left: 1px solid #888

        i
            color: white
            display: inline-block
            font-size: 6vw
            line-height: 12vh
            margin: 0 2vw
            vertical-align: middle

        h3
            color: white
            display: inline-block
            font-size: 4vw
            font-weight: 300
            line-height: 12vh
            margin: 2vh 0 0
            vertical-align: middle
