@import "colors"

*
    font-family: 'Roboto', sans-serif
    line-height: 1.2
    user-select: none

html,
body
    height: 100%
    margin: 0
    position: relative

a
    color: inherit;
    text-decoration: none;

h1
    font-size: 2rem
    font-weight: 200

.view
    height: 100%

.overlay
    position: absolute
    z-index: 9999

.panel
    background-color: color1
    box-sizing: border-box
    height: 100%
    padding: 12vh 0 0vh
    overflow-y: auto
    position: relative
    width: 100%

    &::-webkit-scrollbar
        width: 0 !important

    &.main
        padding-bottom: 12vh

header
    background-color: color2
    color: white
    height: 12vh
    position: fixed
    top: 0
    width: 100%
    z-index: 999

    h1
        line-height: 12vh
        font-size: 6vh
        margin: 0 6vw
        vertical-align: middle
        display: inline-block

    i
        float: right
        width: 15vw
        height: 12vh
        display: inline-block
        vertical-align: middle
        line-height: 12vh !important
        font-size: 6vh
        text-align: center

.card
    background: white
    border-radius: 3px
    box-sizing: border-box
    box-shadow: 0 1px 2px #aaa
    height: 32vh
    margin: 2vh 3vw
    position: relative
    padding: 5vh 8vw
    width: 94vw
    z-index: 2

    h1
        display: block
        margin: 0

    h2
        color: gray
        display: block
        font-size: .9rem
        font-weight: 400
        line-height: 2.5
        margin: 2vh 0 0

        &.balance
            font-size: 1.2rem

.swiper-container
    -webkit-animation: fly-in-from-left .5s 1s ease both
    animation: fly-in-from-left .5s 1s ease both
    -webkit-transform-origin: top left
    transform-origin: top left

    &(even)
        -webkit-animation-name: fly-in-from-right
        animation-name: fly-in-from-right
        -webkit-animation-delay: 1.1s
        animation-delay: 1.1s
        -webkit-transform-origin: top right
        transform-origin: top right

@keyframes fly-in-from-left
    from
        transform: translateY(15rem) rotate(15deg)
        opacity: 0

@keyframes fly-in-from-right
    from
        transform: translateY(15rem) rotate(-15deg)
        opacity: 0
