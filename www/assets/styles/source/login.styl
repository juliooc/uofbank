@import "colors"

.account-number
    height: 120px
    width: 80vw
    position: absolute
    top: 50%
    left: 50%
    margin-top: -60px
    margin-left: -40vw

    .account-number-label
        display: block
        width: 100%
        text-align: left

    .account-number-input
        display: block
        height: 36px
        margin: 6px 0
        width: 100%
        border: 1px solid #aaa
        box-sizing: border-box

    .save-label
        display: block
        width: 100%
        text-align: left
