.transactions
    background: white
    box-sizing: border-box
    box-shadow: 0 1px 2px #aaa
    margin: 2vh 3vw
    position: relative
    width: 94vw
    z-index: 2

    select
        width: 100%
        height: 50px
        outline: 0

    .month
        margin-top: 20px

        .transaction
            height: 40px
            line-height: 40px
            font-size: 10pt
            font-weight: 300
            vertical-align: middle
            padding: 0 15px

            span
                float: right
                height: 40px
                line-height: 40px
                font-size: 10pt
                font-weight: 700
                vertical-align: middle
